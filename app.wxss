 /* 全局引入字体图标样式 */
@import './styles/iconfont.wxss';

/* 在微信小程序中 不支持 通配符 '*',所以这里就用标签 */
page, view, text, swiper, swiper-item, image, navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
/* 主题颜色 通过变量来实现
1. less中存在变量这个知识
2. 原生的css和wxss也是支持 变量
*/
page{
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  /* 定义统一字体大小 假设设计搞 大小是 375px
  因为小程序中所有的屏幕都为750rpx;所以存在以下关系
  1px = 2rpx;
  14px = 28rpx;
  */
  font-size: 28rpx;
}
image {
  width: 100%;
}